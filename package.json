{
    "name": "better-markdown-latex-shortcuts",
    "publisher": "OrangeX4",
    "displayName": "Better Markdown & Latex Shortcuts",
    "description": "Providing some useful shortcuts for markdown with latex.",
    "keywords": ["vscode", "markdown", "latex", "math", "shortcut"],
    "version": "1.2.7",
    "engines": {
        "vscode": "^1.51.0"
    },
    "categories": [
        "Snippets"
    ],
    "icon": "images/profile.png",
    "activationEvents": [
        "onLanguage:markdown"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "keybindings": [
            {
                "command": "better-markdown-latex-shortcuts.copyToRight",
                "key": "Shift+Alt+Right",
                "mac": "Shift+Alt+Right",
                "when": "resourceLangId == markdown && editorTextFocus && editorHasSelection"
            },
            {
                "command": "better-markdown-latex-shortcuts.copyToLeft",
                "key": "Shift+Alt+Left",
                "mac": "Shift+Alt+Left",
                "when": "resourceLangId == markdown && editorTextFocus && editorHasSelection"
            },
            {
                "command": "better-markdown-latex-shortcuts.moveToRight",
                "key": "Alt+Right",
                "mac": "Alt+Right",
                "when": "resourceLangId == markdown && editorTextFocus && editorHasSelection"
            },
            {
                "command": "better-markdown-latex-shortcuts.moveToLeft",
                "key": "Alt+Left",
                "mac": "Alt+Left",
                "when": "resourceLangId == markdown && editorTextFocus && editorHasSelection"
            },
            {
                "command": "better-markdown-latex-shortcuts.singleCursor",
                "key": "Ctrl+Alt+U",
                "mac": "Cmd+Alt+U",
                "when": "editorTextFocus"
            }
        ],
        "snippets": [
            {
                "language": "markdown",
                "path": "./snippets/snippets.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "yarn run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "yarn run compile && yarn run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.51.0",
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.0.0",
        "@types/node": "^12.11.7",
        "eslint": "^7.9.0",
        "@typescript-eslint/eslint-plugin": "^4.1.1",
        "@typescript-eslint/parser": "^4.1.1",
        "glob": "^7.1.6",
        "mocha": "^8.1.3",
        "typescript": "^4.0.2",
        "vscode-test": "^1.4.0"
    },
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/OrangeX4/Better-Markdown-Latex-Shortcuts/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/OrangeX4/Better-Markdown-Latex-Shortcuts"
    },
    "homepage": "https://github.com/OrangeX4/Better-Markdown-Latex-Shortcuts"
}